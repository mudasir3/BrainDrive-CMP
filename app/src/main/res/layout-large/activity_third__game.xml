<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"  android:orientation="vertical"
tools:context="com.example.ranashazib.braindrive.java.Third_Game"
android:background="#f6f4ff"
    >



<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    android:weightSum="1"
    >



</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.12"
    android:weightSum="1"
    android:background="@drawable/oringi">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:textSize="35dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_marginLeft="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score"
        android:id="@+id/textView14" />
</LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.13"
    android:weightSum="1"
    android:background="@drawable/oringi">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_weight="0.1"
        android:background="@drawable/backbtn"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="15dp"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView12"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="35dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="0.2"/>

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"

        >





    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.18"
    android:background="#38000000">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/personss"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/carss"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton8"
        android:src="@drawable/cardss"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton9"
        android:src="@drawable/dicess"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />


</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.08"
    >
</LinearLayout>









</LinearLayout>
