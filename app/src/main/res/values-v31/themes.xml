<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for Android 12+ (API 31+) with splash screen support -->
    <style name="Theme.BrainDrive" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.BrainDrive.Splash</item>
    </style>
    
    <style name="Theme.BrainDrive.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>

